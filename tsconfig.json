{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "lib": ["es2015", "dom"],
    "typeRoots": [
      "types",
      "./node_modules/@types"
    ],
    "rootDir": "./src",
    "outDir": "./lib"
  },
  "exclude": [
    "node_modules",
    "test"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}